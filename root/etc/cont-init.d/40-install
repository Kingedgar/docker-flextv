#!/usr/bin/with-contenv bash

# Make Flex TV Directory
if [ ! -d /config/www/Phlex ]; then
    echo "Creating Flex TV Directory..."
    mkdir -p /config/www/Phlex
fi

# fetch site
if [ ! -d /config/www/Phlex/.git ]; then
    echo "No repo found, pulling..."
	git clone https://github.com/d8ahazard/Phlex /config/www/Phlex
fi

echo "Updating Flex TV..."
cd /config/www/Phlex
git pull

# permissions
chown -R abc:abc /config/www
chmod -R 777 /config
git config core.fileMode false
	

